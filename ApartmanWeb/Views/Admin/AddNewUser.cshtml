@model RegisterViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!-- Navigation-->
<div>
    @await Html.PartialAsync("_DashboardNavPartial")
    <div class="content-wrapper">

        <div class="col-md-4">
            <form asp-action="Register" id="check-register" method="post">
                <h4>Dodaj novog gosta</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Lozinka</label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Potvrda lozinke</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                </div>
                <button type="submit" class="btn btn-default">Dodaj</button>
            </form>
        </div>
    </div>
</div>
